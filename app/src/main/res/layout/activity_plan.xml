<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".plan">

        <TextView
            android:layout_width="match_parent"
            android:textSize="33sp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Escoge tu plan!!"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/miplan"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_height="75dp"
                android:onClick="planP"
                android:text="mi propio plan"
                android:background="@drawable/roundedbutton"
                android:layout_margin="20dp"/>

            <Button
                android:id="@+id/recomendado"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_height="75dp"
                android:layout_margin="20dp"
                android:background="@drawable/roundedbutton"
                android:onClick="recomendado"
                android:text="plan recomendado"/>

            <Button
                android:id="@+id/oldPlan"
                android:layout_width="200dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_height="75dp"
                android:layout_margin="20dp"
                android:onClick="oldplan"
                android:background="@drawable/roundedbutton"
                android:text="ya tengo un plan"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="bottom"
        android:background="@drawable/fondoplan"/>


</FrameLayout>
